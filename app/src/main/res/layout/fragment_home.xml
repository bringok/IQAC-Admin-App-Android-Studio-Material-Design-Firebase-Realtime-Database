<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="info.androidhive.navigationdrawer.fragment.HomeFragment"
    android:background="#fff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/clglogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/clglogo" />

            <TextView
                android:id="@+id/txt1"
                android:layout_below="@+id/clglogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" St Aloysius College (Autonomous) "
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt2"
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Shine to Enkindle"
                android:gravity="center_horizontal" />

            <!-- ........................................................... -->

            <LinearLayout
                android:layout_marginTop="220dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="left"
                android:orientation="vertical">

                <!-- card design start -->
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="#5800A0"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="85dp"
                        android:layout_height="105dp"
                        app:cardBackgroundColor="@color/bgcard"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Events"
                            android:layout_marginTop="84dp"
                            android:layout_marginLeft="22dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgevents"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circlebg"
                                android:padding="10dp"
                                android:src="@drawable/ic_event" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>
                <!-- card design end -->

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="380dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="left"
                android:orientation="vertical">

                <!-- card design start -->
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="#5800A0"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="85dp"
                        android:layout_height="105dp"
                        app:cardBackgroundColor="@color/bgcard"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About"
                            android:layout_marginTop="84dp"
                            android:layout_marginLeft="22dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgabout"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circlebg"
                                android:padding="10dp"
                                android:src="@drawable/ic_about" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>
                <!-- card design end -->

            </LinearLayout>

            <!-- ........................................................... -->

            <LinearLayout
                android:layout_marginTop="220dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="right"
                android:orientation="vertical">

                <!-- card design start -->
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="#5800A0"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="85dp"
                        android:layout_height="105dp"
                        app:cardBackgroundColor="@color/bgcard"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pdf"
                            android:layout_marginTop="84dp"
                            android:layout_marginLeft="32dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgpdf"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circlebg"
                                android:padding="10dp"
                                android:src="@drawable/ic_pdf" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>
                <!-- card design end -->

            </LinearLayout>

            <!-- ........................................................... -->

            <LinearLayout
                android:layout_marginTop="150dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <!-- card design start -->
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="#5800A0"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="85dp"
                        android:layout_height="105dp"
                        app:cardBackgroundColor="@color/bgcard"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="News"
                            android:layout_marginTop="84dp"
                            android:layout_marginLeft="25dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgnews"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circlebg"
                                android:padding="10dp"
                                android:src="@drawable/ic_news"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>
                <!-- card design end -->

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="300dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <!-- card design start -->
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="#5800A0"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="85dp"
                        android:layout_height="105dp"
                        app:cardBackgroundColor="@color/bgcard"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="84dp"
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgnotifications"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circlebg"
                                android:padding="10dp"
                                android:src="@drawable/ic_notifications" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>
                <!-- card design end -->

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="450dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <!-- card design start -->
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="#5800A0"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="85dp"
                        android:layout_height="105dp"
                        app:cardBackgroundColor="@color/bgcard"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat"
                            android:layout_marginTop="84dp"
                            android:layout_marginLeft="28dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgchat"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circlebg"
                                android:padding="10dp"
                                android:src="@drawable/ic_chat" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>
                <!-- card design end -->

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="380dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="right"
                android:orientation="vertical">

                <!-- card design start -->
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="#5800A0"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="85dp"
                        android:layout_height="105dp"
                        app:cardBackgroundColor="@color/bgcard"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Privacy"
                            android:layout_marginTop="84dp"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgprivacy"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circlebg"
                                android:padding="10dp"
                                android:src="@drawable/ic_privacy" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>
                <!-- card design end -->

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>